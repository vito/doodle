class(Anatomy::Document < Nokogiri::HTML::Document):
  attr-accessor(#title, #tag, #tags, #styles, #up, #down)

  define(initialize):
    super

    @title = nil
    @tag = ""
    @tags = Hash new
    @up = nil
    @down = Hash new -- tag -> document

  define(depth):
    d = 0
    p = @up

    while(p):
      d += 1
      p =! p up

    d

  url :=
    if(depth == 0)
      then: @tag + ".html"
      else: @up url sub(r{#.*$}, "") + "#section_" + @tag
